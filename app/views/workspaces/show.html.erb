<div class="navigation">
  <nav>
    <div class="row">
      <div class="workspace-name col-3">
        <h6><%= @workspace.name %></h6>
      </div>
      <div class="channel-name col-9">
        <h4 id="channel-name"></h4>
      </div>
    </div>
  </nav>
</div>

<div class="container-flux" style="height: 100%;">
  <div class="main-contents row"  style="height: 100%;">
    <div class="col-3 channel-sidebar" style="background-color: #3F0E40; color: rgb(207,195,207); overflow:auto;" >
      <div class="lists ml-3">
        <div class="row">
          <div class="col-10">
            <h4><%= link_to "チャンネル", workspace_rooms_path(@workspace) %></h4>
          </div>
          <div class="col-2">
            <%= link_to "+", new_workspace_room_path(@workspace) %>
          </div>
        </div>
        <div class="listitem">  
          <%= render @rooms %>
        </div>
      </div>
    </div>
    <div class="col-9 contents" style="height: 100%; overflow: auto;">
      <div id='messages'></div>
      <div class="message-input">
        <div class="form-group ml-3">
          <%= text_area :content, nil, data: { behavior: 'room_speaker' }, class: "form-control", rows: 5 %>
        </div>
      </div>
    </div>
  </div>
</div>

