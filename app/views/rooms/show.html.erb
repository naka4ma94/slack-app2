<div class="contents">
  <div class="navigation row">
    <div class="workspace-name col-3">
      <div class="name">
        <%= @workspace.name %>
      </div>
    </div>
    <div class="channel-name col-9">
      <div class="name">
        # <%= @room.name %>
      </div>
    </div>
  </div>
  <div class="main row">
    <div class="sidevar col-3">
      <div class="row">
        <div class="col-10">
          <h4><%= link_to "チャンネル", workspace_rooms_path %></h4>
        </div>
        <div class="col-2">
          <h4><%= link_to "+", new_workspace_room_path(@workspace) %></h4>
        </div>
      </div>
      <div class="channels-name">
        <%= render @rooms %>
        <p><%= link_to "ワークスペースを変更する", workspaces_path %></p>
        <% if user_signed_in? %>
          <a><%= link_to 'Logout', destroy_user_session_path, method: :delete %></a>
        <% end %>
      </div>
    </div>
    <div class="mainvar col-9">
      <div class="messages" data-room_id="<%= @room.id %>">
        <%= render @messages %>
        <div class="message-input">
          <div class="input form-group">
            <%= text_area :content, nil, data: { behavior: 'room_speaker' }, class: "form-control", style: "width: 100%", rows: 5 %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>


<style>
  .contents {
    height: 100%;
    overflow-x: hidden;
    overflow-y: hidden;
  }

  .navigation {
    height: 8%;
  }

  .workspace-name {
    background-color: #3F0E40;
    text-align: center;
    display: table;
    height: 100%;
    width: 100%;
    color: rgb(207, 195, 207);
  }

  .channel-name {
    text-align: center;
    display: table;
    height: 100%;
    width: 100%;
    border-bottom: thin solid #f5f5f5;
  }

  .name {
    display: table-cell;
    vertical-align: middle;
  }

  .main {
    height: 100%;
  }

  .sidevar {
    color: rgb(207, 195, 207);
    background-color: #3F0E40;
    height: 100%;
    overflow: auto;
    padding-bottom: 10%;

  }

  .sidebar,a {
    color: rgb(207, 195, 207);
  }

  .sidebar,a:hover {
    color: white;
    text-decoration: none;
  }

  .mainvar {
    height: 100%;
    overflow: auto;
    padding-bottom: 30%;
  }

  .message-input {
    position: fixed;
    padding: 5px;
    width: 60%;
    top: 75%;
  }
</style>
