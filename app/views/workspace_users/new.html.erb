<h3>以下のワークスペースに参加します</h3>
<h4>ワークスペース名：<%= @workspace.name %></h4>

<%= form_with(model: @workspace_user, local: true) do |form| %>
  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= form.hidden_field :workspace_id, value: @workspace.id %>
  </div>

  <div class="field">
    <%= form.submit "OK" %>
  </div>
<% end %>
